<?php
/**
 * @file
 * Web of Science badge admin options
 */

function islandora_wos_admin_form($form, $form_settings) {
  $form['islandora_wos_username'] = array(
    '#type' => 'textfield',
    '#title' => t('Web of Science username'),
    '#description' => t('Your username for the Article Match Retrieval service.'),
    '#default_value' => variable_get('islandora_wos_username', ''),
  );

  $form['islandora_wos_password'] = array(
    '#type' => 'textfield',
    '#title' => t('Web of Science password'),
    '#description' => t('Your password for the Article Match Retrieval service.'),
    '#default_value' => variable_get('islandora_wos_password', ''),
  );

  $form['islandora_wos_badgetype'] = array(
    '#type' => 'radios',
    '#title' => t('Web of Science badge type'),
    '#description' => t('You may choose an image generated by shields.io, or a text block you can style yourself with CSS.'),
    '#options' => array('image' => t('image'), 'text' => t('text')),
    '#default_value' => variable_get('islandora_wos_badgetype', 'image'),
  );

  return system_settings_form($form);
}